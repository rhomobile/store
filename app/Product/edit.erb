<div class="toolbar">
	<h1 id="pageTitle">
		Edit <%=@product.name%>
	</h1>
</div>

<form title="Edit Product" 
	  class="panel" 
	  id="product_edit_form" 
	  method="POST" 
	  action="<%=url_for(:action => :update)%>" selected="true">
	<fieldset>
		<input type="hidden" name="id" value="<%=@product.object%>"/>
		
		  <div class="row">
			  <label>Name: </label>
			  <input type="text" name="product[name]" value="<%=@product.name%>"/>
		  </div>
		
		  <div class="row">
			  <label>Sku: </label>
			  <input type="text" name="product[sku]" value="<%=@product.sku%>"/>
		  </div>
		
		  <div class="row">
			  <label>Brand: </label>
			  <input type="text" name="product[brand]" value="<%=@product.brand%>"/>
		  </div>
		
		  <div class="row">
			  <label>Price: </label>
			  <input type="text" name="product[price]" value="<%=@product.price%>"/>
		  </div>
		
		  <div class="row">
			  <label>Quantity: </label>
			  <input type="text" name="product[quantity]" value="<%=@product.quantity%>"/>
		  </div>
		
	</fieldset>
	<input type="submit" value="Update"/>
	<p align="center">
		<a href="<%=url_for(:action => :delete, :id => @product.object)%>">
			<font color="#990000">Delete</font>
		</a>
	</p>
</form>