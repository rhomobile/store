<div class="toolbar">
	<h1 id="pageTitle">
		<%=@customer.first%>
	</h1>
</div>

<div class="panel" selected="true">

<a class="button right_button" href="<%=url_for(:action => :edit, :id => @customer.object)%>" target="_self">Edit</a>

<table class="grid">
  
  <tr>
	<td class="gridleft">First</td>
    <td class="gridright"><%=@customer.first%></td>
  </tr>
  
  <tr>
	<td class="gridleft">Last</td>
    <td class="gridright"><%=@customer.last%></td>
  </tr>
  
  <tr>
	<td class="gridleft">Email</td>
    <td class="gridright"><%=@customer.email%></td>
  </tr>
  
  <tr>
	<td class="gridleft">Phone</td>
    <td class="gridright"><%=@customer.phone%></td>
  </tr>
  
  <tr>
	<td class="gridleft">Address</td>
    <td class="gridright"><%=@customer.address%></td>
  </tr>
  
  <tr>
	<td class="gridleft">City</td>
    <td class="gridright"><%=@customer.city%></td>
  </tr>
  
  <tr>
	<td class="gridleft">State</td>
    <td class="gridright"><%=@customer.state%></td>
  </tr>
  
  <tr>
	<td class="gridleft">Zip</td>
    <td class="gridright"><%=@customer.zip%></td>
  </tr>
  
</table>
</div>